<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <ImageView
        android:id="@+id/btnRegresar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/btnRegresar"
        app:layout_constraintBottom_toBottomOf="@id/btnRegresar"
        app:layout_constraintStart_toEndOf="@id/btnRegresar"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"/>

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Perfil info -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/appprofile"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/btnRegresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alejandro Avalos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ejemplo_perfil@gmail.com"
        android:textSize="14sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón para editar el perfil -->
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:text="Editar Perfil"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Configuración de la cuenta -->
    <TextView
        android:id="@+id/tvAccountSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIGURACIÓN DE LA CUENTA"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutAccountOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAccountSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/itemMyOrders"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconOrders"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_orders"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvMyOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mis Órdenes"/>

            <TextView
                android:id="@+id/tvActiveShipments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 ENVÍOS ACTIVOS"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemSavedAddresses"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconAddresses"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_addresses"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvSavedAddresses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direcciones Guardadas"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemPaymentMethods"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconPayments"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_payments"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvPaymentMethods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métodos de pago"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Mesa de ayuda y preferencias -->
    <TextView
        android:id="@+id/tvPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESA DE AYUDA Y SOPORTE"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutAccountOptions"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutSupportOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPreferences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/itemHelp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconHelp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_help"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvHelpSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesa de ayuda"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemLanguage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconLanguage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_language"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Idioma"/>

            <TextView
                android:id="@+id/tvCurrentLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESPAÑOL"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                app:tint="@color/red"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:text="Logout"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
